<body>

<h1>Separador de Mensagens para WhatsApp</h1>

<textarea id="entrada" placeholder="Cole aqui todas as mensagens completas..."></textarea>

<button onclick="separarMensagens()">Separar mensagens</button>

<div class="resultado" id="resultado"></div>

<script>
function separarMensagens() {
    const texto = document.getElementById("entrada").value.trim();
    const resultado = document.getElementById("resultado");
    resultado.innerHTML = "";

    if (!texto) {
        alert("Cole algum texto primeiro.");
        return;
    }

    // CompatÃ­vel com Android, iOS e Desktop
    const mensagens = texto.split(/(?=PROCESSO:)/g);

    mensagens.forEach((msg) => {
        const bloco = document.createElement("div");
        bloco.className = "mensagem";
        bloco.textContent = msg.trim();

        const btn = document.createElement("button");
        btn.className = "copiar";
        btn.textContent = "Copiar mensagem";

        btn.onclick = async () => {
            try {
                await navigator.clipboard.writeText(msg.trim());
                btn.textContent = "Copiado!";
                setTimeout(() => btn.textContent = "Copiar mensagem", 1500);
            } catch (e) {
                alert("Copie manualmente (selecione o texto).");
            }
        };

        bloco.appendChild(btn);
        resultado.appendChild(bloco);
    });
}
</script>

